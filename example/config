
Super_L + XF86Audio{Play,Pause}
  playerctl --{play,pause}

# this is a comment
Super_L + W
  walld

Super_L + Return
  # comments can be placed between these aswell
  echo "and run this"

# the formatter only cares about there being 2 lines with text, spaces and enters do not matter
Super_L+Shift_L+Return

echo "like this"


# they can also be seperated using a semicolon like so
Super_L + Alt_L + S ; echo "this is also valid"

# you honestly dont even need plus signs actually, they just get ignored, but its a nice visual
Super_L {Shift_L,Alt_L} S
  echo "like this"
  
